<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_centerInParent="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".LandingPageActivity">

        <TextView
            android:id="@+id/feelingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/how_are_you_feeling_now"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/charge_purple"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TableLayout
            android:id="@+id/feelingsTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/feelingTextView">

            <TableRow
                android:id="@+id/mindTableRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/mindTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="4dp"
                    android:text="@string/mind"
                    android:textColor="@color/charge_purple"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

                <ImageView
                    android:id="@+id/mind1ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:tag="1"
                    app:srcCompat="@drawable/e1" />

                <ImageView
                    android:id="@+id/mind2ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:tag="2"
                    app:srcCompat="@drawable/e2" />

                <ImageView
                    android:id="@+id/mind3ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:tag="3"
                    app:srcCompat="@drawable/e3" />

                <ImageView
                    android:id="@+id/mind4ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:tag="4"
                    app:srcCompat="@drawable/e4" />

                <ImageView
                    android:id="@+id/mind5ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:tag="5"
                    app:srcCompat="@drawable/e5" />
            </TableRow>

            <TableRow
                android:id="@+id/bodyTableRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/bodyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="4dp"
                    android:text="@string/body"
                    android:textColor="@color/charge_purple"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

                <ImageView
                    android:id="@+id/body1ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:tag="1"
                    app:srcCompat="@drawable/e1" />

                <ImageView
                    android:id="@+id/body2ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:tag="2"
                    app:srcCompat="@drawable/e2" />

                <ImageView
                    android:id="@+id/body3ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:tag="3"
                    app:srcCompat="@drawable/e3" />

                <ImageView
                    android:id="@+id/body4ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:tag="4"
                    app:srcCompat="@drawable/e4" />

                <ImageView
                    android:id="@+id/body5ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:tag="5"
                    app:srcCompat="@drawable/e5" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/suggestButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:backgroundTint="@color/charge_green"
            android:text="@string/suggest_an_activity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/feelingsTable" />

        <TextView
            android:id="@+id/orTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/or_select_an_activity_from_below"
            android:textColor="@color/charge_purple"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/suggestButton" />

        <TableLayout
            android:id="@+id/activitiesTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/orTextView"
            app:layout_constraintBottom_toTopOf="@id/accountImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView24"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:padding="4dp"
                    android:src="@drawable/sample" />

                <ImageView
                    android:id="@+id/imageView25"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:padding="4dp"
                    android:src="@drawable/sample" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageViewStretching"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:padding="4dp"
                        android:src="@drawable/stretching" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@id/textViewWalking"
                        android:text="Stretching"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textAlignment="center" />

            </RelativeLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageViewWalking"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:padding="4dp"
                        android:src="@drawable/footsteps_120" />

                    <TextView
                        android:id="@+id/textViewWalking"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Walking"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageViewDoodle"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:padding="4dp"
                        android:src="@drawable/doodle_120_g" />

                    <TextView
                        android:id="@+id/textViewDoodle"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Doodle"
                        android:textSize="18dp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageViewGratitude"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:padding="4dp"
                        android:src="@drawable/gratitude_125" />

                    <TextView
                        android:id="@+id/textViewGratitudeList"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Gratitude"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </TableRow>
        </TableLayout>

        <ImageView
            android:id="@+id/accountImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:srcCompat="@drawable/ic_baseline_account_circle_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:contentDescription="@string/account_link" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>